<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pet Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        function confirmDelete(petId) {
            let confirmAction = confirm("Are you sure you want to delete this pet?");
            if (confirmAction) {
                window.location.href = `/pets/delete/${petId}`; // Redirect only if confirmed
            }
        }
