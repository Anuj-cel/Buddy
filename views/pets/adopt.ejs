<style>
    .container{
        width: 50rem;
    }
    img{
        max-width: 20rem;
        border-radius: 5px;
    }
    .petcontainer{

        width: 100%;
  margin: auto;

    }
    input,textarea{
        width: 60%;
    }
</style>
<body>
    <%- include("../includes/navbar") %>
 
    <div class="container mx-auto p-4">
        <div class="petcontainer max-w-lg mx-auto bg-white p-6 rounded-lg shadow-lg">
            <form class="form-control" action="/pets/adopt/<%=id %>" method="post" autocomplete="off">
                <h2 class="text-2xl font-bold mb-4 text-center">Pet Adoption Form</h2>
                <div class="mb-4">
                    <label for="Name" class="block text-sm font-medium text-gray-700">Name</label>
                    <input type="text" name="Name" placeholder="Enter your name" required class="mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500" autocomplete="new-password">
                </div>
                <div class="mb-4">
                    <label for="phoneNumber" class="block text-sm font-medium text-gray-700">Phone No.</label>
                    <input type="text" name="phoneNumber" placeholder="Enter your Phone Number" required class="mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500">
                </div>
                <div class="mb-4">
                    <label for="address" class="block text-sm font-medium text-gray-700">Address</label>
                    <textarea name="address" placeholder="Enter your address" required class="mt-1 block w-full px-4 py-2 border rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500"></textarea>
                </div>
                <div class="text-center">
                    <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-300">Submit</button>
                </div>
            </form>
        </div>
    </div>
    

    <%- include("../includes/footer") %>
</body>
</html>