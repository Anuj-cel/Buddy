<body>
  <%- include("../includes/navbar") %>
  <%- include('../includes/flash.ejs') %>

  <section class="bg-light p-3 sm:p-4 lg:p-5">
    <div class="container mx-auto">
      <div class="flex justify-center">
        <div class="w-full sm:w-9/12 lg:w-7/12 xl:w-6/12 2xl:w-5/12">
          <div class="border border-light-subtle rounded-4 shadow-md bg-white">
            <div class="p-3 sm:p-4 lg:p-5">
              <div class="mb-5">
                <h2 class="text-2xl font-semibold text-center">Create an Account</h2>
              </div>
              <form action="/signup" method="post">
                <div class="space-y-4">
                  <div>
                    <label for="username" class="block text-sm font-medium">Username</label>
                    <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md" name="username" id="username" placeholder="Choose a username" required>
                  </div>
                  <div>
                    <label for="firstName" class="block text-sm font-medium">First Name</label>
                    <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md" name="firstName" id="firstName" placeholder="Enter your first name" required>
                  </div>
                  <div>
                    <label for="lastName" class="block text-sm font-medium">Last Name (optional)</label>
                    <input type="text" class="w-full px-4 py-2 border border-gray-300 rounded-md" name="lastName" id="lastName" placeholder="Enter your last name">
                  </div>
                  <div>
                    <label for="email" class="block text-sm font-medium">Email</label>
                    <input type="email" class="w-full px-4 py-2 border border-gray-300 rounded-md" name="email" id="email" placeholder="Enter your email" required>
                  </div>
                  <div>
                    <label for="photo" class="block text-sm font-medium">Profile Photo URL (optional)</label>
                    <input type="url" class="w-full px-4 py-2 border border-gray-300 rounded-md" name="photo" id="photo" placeholder="Paste your profile photo link">
                  </div>
                  <div>
                    <label for="password" class="block text-sm font-medium">Password</label>
                    <input type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md" name="password" id="password" placeholder="Create a password" required>
                  </div>
                  <div>
                    <button class="w-full py-2 bg-blue-500 text-white rounded-md font-semibold hover:bg-blue-600" type="submit">Sign Up</button>
                  </div>
                </div>
              </form>
              <div class="mt-5">
                <hr class="border-gray-300 mb-4">
                <p class="text-center text-sm text-gray-600">
                  Already have an account? <a href="/login" class="text-blue-500 hover:underline">Log In</a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%- include("../includes/footer") %>
</body>
</html>
