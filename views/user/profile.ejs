<!DOCTYPE html>
<html lang="en">
<head>
    <title>Profile | IAdopt</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

    <%- include("../includes/navbar") %>
        <%- include("../includes/flash") %>

    <div class="container mx-auto px-6 py-10">
        <div class="bg-white shadow-lg rounded-lg p-6 max-w-2xl mx-auto">
            <div class="flex items-center space-x-4">
                <!-- Profile Image -->
                <% if (user.profileImg) { %>
                    <img src="<%= user.profileImg %>" class="w-16 h-16 rounded-full object-cover">
                <% } else { %>
                    <div class="w-16 h-16 bg-blue-600 text-white rounded-full flex items-center justify-center text-2xl">
                        <%= user.username.charAt(0).toUpperCase() %>
                    </div>
                <% } %>

                <div>
                    <h2 class="text-xl font-semibold text-gray-800"><%= user.username %></h2>
                    <p class="text-gray-600"><%= user.email %></p>
                </div>
            </div>

            <div class="mt-6">
                <h3 class="text-lg font-semibold text-gray-800">Wishlist</h3>
                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 mt-4">
                    <% wishlist.forEach(pet => { %>
                        <div class="bg-white shadow rounded-lg overflow-hidden">
                            <img src="<%= pet.photo_url %>" alt="<%= pet.name %>" class="w-full h-32 object-cover">
                            <div class="p-3">
                                <h4 class="text-gray-800 font-medium"><%= pet.name %></h4>
                                <p class="text-gray-600 text-sm">Age: <%= pet.age %></p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="mt-6 text-right">
                <!-- <a href="/settings" class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Edit Profile</a> -->
                <a href="/logout" class="px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600">Logout</a>
            </div>
        </div>
    </div>

    <%- include('../includes/footer.ejs') %>

</body>
</html>
